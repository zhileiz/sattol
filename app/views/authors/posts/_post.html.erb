<tr>
  <td>
    <%=link_to post.title, post %>
  </td>

  <% if post.published %>
  <td>
    <%= link_to unpublish_authors_post_path(post), method: :put do%>
      <i class="fa fa-times"></i>
      UnPublish
    <% end %>
  </td>
  <% else %>
  <td>
    <%= link_to publish_authors_post_path(post), method: :put do%>
      <i class="fa fa-check"></i>
      Publish
    <% end %>
  </td>
  <% end %>
  <td>
    <%= link_to edit_authors_post_path(post) do%>
      <i class="fa fa-pencil"></i>
      Edit
    <% end %>
  </td>
  <td>
    <%= link_to authors_post_path(post), method: :delete do%>
      <i class="fa fa-trash"></i>
      Delete
    <% end %>
  </td>
</tr>
