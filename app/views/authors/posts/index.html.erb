<% provide(:page_title, 'backend') %>
<% provide(:posts_active, 'active') %>
<% provide(:is_admin_page, true) %>
    <%= render 'layouts/admin_header' %>
<p id="notice"><%= notice %></p>

<div class="container">
<div class="row">
  <div class="col-10 offset-1">
  <table width="100%" class="table">
    <thead class = "thead-inverse">
    <tr>
      <th>Posts Title</th>
      <th>Publish</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </table>
</tbody>
</div>
</div>
<div class="pagination-top">
  <%= will_paginate @posts %>
</div>
</div>
